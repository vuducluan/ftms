<h2 class="label"><%= t "subjects.about_trainer" %></h2>
<div id="teaching-assistants">
  <ul class="list list--object list--object--m">
    <% @trainers.each do |trainer| %>
      <li class="list-item">
        <div class="bucket-media dn db--m">
          <div class="badge img-circle">
            <%= avatar_user_tag trainer, "img-circle",
              Settings.image_user_subject %>
          </div>
        </div>
        <p class="tau tsxs">
          <strong><%= link_to trainer.name, "#" %></strong>
        </p>
      </li>
    <% end %>
  </ul>
</div>

